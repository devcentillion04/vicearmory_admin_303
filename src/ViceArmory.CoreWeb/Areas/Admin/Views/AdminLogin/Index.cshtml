@model ViceArmory.DTO.RequestObject.Authenticate.AuthenticateRequest
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Login</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="~/Adminassets/css/form.css" rel="stylesheet" />
    <link href="~/Adminassets/plugins/jQueryConfirm/jquery-confirm.min.css" rel="stylesheet" />
    <script src="~/Adminassets/js/jquery-1.11.2.min.js"></script>
    
</head>
<body>
    <input type="hidden" id="hdfBaseUrl" value="@Url.Content("~/")" />
    <div class="container">
        <div class="login-page">
            <h5>Admin Login</h5>
            <div class="form">
                <form class="login-form" id="frm" asp-action="Index" asp-controller="AdminLogin" asp-area="Admin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <img src="~/Assets/logo.png" class="logo" />
                        <input asp-for="Username" class="form-control" placeholder="username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <input type="password" asp-for="Password" class="form-control" placeholder="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-info" />
                    </div>
                     <p style="font-weight:700; color:red;"> @ViewBag.Message</p>
                    <a asp-action="Register" asp-controller="AdminLogin">New user?</a>
                </form>
            </div>
        </div>
    </div>
    <style type="text/css">
        body {
            /*  background: #76b852;
            background: -webkit-linear-gradient(to right, #76D7F6 , #5BBDB3);
            background: -moz-linear-gradient(to right, #76D7F6 , #5BBDB3);
            background: -o-linear-gradient(to right, #76D7F6 , #5BBDB3);
            background: linear-gradient(to right, #76D7F6 , #5BBDB3);*/
            font-family: "Roboto", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            background-image: url('../Adminassets/images/bg.jpg');
            background-image: url('../../Adminassets/images/bg.jpg');
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>

    <script src="~/Adminassets/plugins/jQueryConfirm/jcFunctions.js"></script>
    <script src="~/Adminassets/plugins/jQueryConfirm/jquery-confirm.min.js"></script>
    <script src="~/Adminassets/plugins/parsleyjs/parsley.min.js"></script>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
</body>
</html>
