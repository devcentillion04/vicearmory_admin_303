<div class="form-group col-md-12">
    <div class="col-sm-12">
        <table id="datatableArmory" class="dataTable table-bordered datatable-grid " width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MetaTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        Image
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetaTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @if(item.ProductImage != null)
                        {
                        <img class="imgProduct" src="@item.ProductImage[0]" alt="image" />
                        }
                        else
                        {
                        <span>image not available</span>
                        }
                    </td>
                    <td>
                        <a href="https://cloud.lightspeedapp.com/login.html" target="_blank" class="btn btn-info"> Edit</a>
                        <a href="https://cloud.lightspeedapp.com/login.html" target="_blank"  class="btn btn-danger"> Delete</a>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
