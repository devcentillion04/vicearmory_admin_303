@model IEnumerable<ViceArmory.ResponseObject.Product.ProductResponseDTO>

@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_ALayout.cshtml";
}

<h1>Product List</h1>
<hr />
<p style="color:red;"> These products are managed from lightspeed. Please refresh the page, whenever you add or change products in lightspeed.</p>
<hr />
