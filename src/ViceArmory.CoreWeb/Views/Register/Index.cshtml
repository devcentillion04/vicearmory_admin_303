
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login">
    <section id="newsletter_section" class="newsletter_section animate__animated animate__faster animate__slideInUp">
        <div class="container">
            <div class="row">
                <div class="newsletter_box col-12">
                    <div class="box_bg text-center">
                        <h3>Sign Up</h3>
                        <form action="" method="post" class="d-flex flex-wrap align-items-center justify-content-center">
                            <div class="form_box input-box"><input type="email" class="form_box_input input" placeholder="Your email"></div>
                            <div class="form_box input-box"><input type="password" class="form_box_input input" placeholder="Password"></div>
                            <div class="form_box input-box"><input type="password" class="form_box_input input" placeholder="Confirm Password"></div>
                            <div class="form_box btn-box"><button type="submit" class="btn">Sign Up</button></div>
                            <div class="form_box or-box input-box text-center">
                                <p>OR</p>
                            </div>
                            <div class="form_box sign-box forget-box input-box text-center"><a href="/login">Login</a></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>